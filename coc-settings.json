{
    "languageserver": {
        "kotlin": {
            "command": "/home/cht/lsp/kotlin/bin/kotlin-language-server",
            "filetypes": ["kotlin"]
        },
        "ocaml-lsp": {
            "command": "opam",
            "args": ["config", "exec", "--", "ocamllsp"],
            "filetypes": ["ocaml", "reason"]
        },
        "dart": {
            "command": "dart",
            "args": [
                "/home/cht/Flutter/bin/cache/dart-sdk/bin/snapshots/analysis_server.dart.snapshot",
                "--lsp",
                "--client-id",
                "vim",
                "--client-version",
                "coc.nvim"
            ],
            "filetypes": ["dart"],
            "trace.server": "verbose"
        },
        "vala": {
            "command": "vala-language-server",
            "filetypes": ["vala", "genie"]
        },
        "svlangserver": {
            "command": "svlangserver",
            "filetypes": ["systemverilog", "scala"],
            "settings": {
                "systemverilog.includeIndexing": ["**/*.{sv,svh}"],
                "systemverilog.excludeIndexing": ["test/**/*.sv*"],
                "systemverilog.defines": [],
                "systemverilog.launchConfiguration": "/tools/verilator -sv -Wall --lint-only",
                "systemverilog.formatCommand": "/tools/verible-verilog-format"
            }
        },
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
            "filetypes": ["haskell", "lhaskell"]
        }
    },
    "python.analysis.useLibraryCodeForTypes": false,
    "java.format.settings.url": "/home/cht/.config/coc/extensions/node_modules/redhat.java/eclipse-formatter.xml",
    "Lua.diagnostics.globals": ["vim"],
		"xml.validation.noGrammar": "ignore",
		"explorer.width": 30,
    "explorer.previewAction.onHover": "labeling",
    "explorer.icon.enableNerdfont": true
}
